.carousel.slide{'data-ride': 'carousel', id: '${1:carouselId}'}
  %ol.carousel-indicators
    %li.active{'data-slide-to': '0', 'data-target': '#${1:carouselId}'}
    %li{'data-slide-to': '1', 'data-target': '#${1:carouselId}'}
    %li{'data-slide-to': '2', 'data-target': '#${1:carouselId}'}

  .carousel-inner{role: 'listbox'}
    .carousel-item.active
      %img{alt: '${3:First slide}', 'data-src': ${2:image_url('')}

    .carousel-item
      %img{alt: '${5:Second slide}', 'data-src': ${4:image_url('')}

    .carousel-item
      %img{alt: '${7:Third slide}', 'data-src': ${6:image_url('')}

  %a.carousel-control-prev{'data-slide': 'prev', href: '#${1:carouselId}', role: 'button'}
    %span.carousel-control-prev-icon{'aria-hidden': 'true'}
    %span.sr-only Previous

  %a.carousel-control-next{'data-slide': 'next', href: '#${1:carouselId}', role: 'button'}
    %span.carousel-control-next-icon{'aria-hidden': 'true'}
    %span.sr-only Next
