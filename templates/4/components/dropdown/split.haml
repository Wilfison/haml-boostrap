.btn-group
  %button.btn.btn-secondary{type: 'button'} ${1:Split dropdown}
  %button.btn.btn-secondary.dropdown-toggle.dropdown-toggle-split{'aria-expanded': 'false', 'aria-haspopup': 'true', 'data-toggle': 'dropdown', type: 'button'}
    %span.sr-only Toggle Dropdown
  .dropdown-menu
    %a.dropdown-item{href: '${3:#}'} ${2:Action}
    %a.dropdown-item.disabled{href: '${5:#}'} ${4:Disabled action}
    .dropdown-divider
    %a.dropdown-item{href: '${7:#}'} ${6:Separated link}
