.dropup
  %button.btn.btn-secondary.dropdown-toggle{"aria-expanded": "false", "aria-haspopup": "true", "data-toggle": "dropdown", id: "${2:triggerId}", type: "button"}
    ${1:Dropdown}
  .dropdown-menu{"aria-labelledby": "${2:triggerId}"}
    %a.dropdown-item{href: "${4:#}"} ${3:Action}
    %a.dropdown-item.disabled{href: "${6:#}"} ${5:Disabled action}
    %h6.dropdown-header ${7:Section header}
    %a.dropdown-item{href: "${9:#}"} ${8:Action}
    .dropdown-divider
    %a.dropdown-item{href: "${11:#}"} ${10:After divider action}
