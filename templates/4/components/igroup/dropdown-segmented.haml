.input-group
  %span.input-group-btn
    %button.btn.btn-secondary.dropdown-toggle{'aria-expanded': 'false', 'aria-haspopup': 'true', 'aria-label': '$2', 'data-toggle': 'dropdown', type: 'button'} ${1:Dropdown}
    %button.btn.btn-secondary.dropdown-toggle.dropdown-toggle-split{'aria-expanded': 'false', 'aria-haspopup': 'true', 'data-toggle': 'dropdown', type: 'button'}
      %span.sr-only Toggle Dropdown
    .dropdown-menu
      %a.dropdown-item{href: '${4:#}'} ${3:Action}
      %a.dropdown-item.disabled{href: '${6:#}'} ${5:Disabled action}
      .dropdown-divider{role: 'separator'}
      %a.dropdown-item{href: '${8:#}'} ${7:Separated link}
  %input.form-control{'aria-label': '$12', id: '${11:name}', name: '${11:name}', placeholder: '$9', type: '${10:text|password|email|number|submit|date|datetime|datetime-local|month|color|range|search|tel|time|url|week}'}/
