/ Button trigger modal
%button.btn.btn-primary.btn-lg{"data-target": "\#${2:modelId}", "data-toggle": "modal", type: "button"}
  ${1:Launch}
/ Modal
.modal.fade{"aria-hidden": "true", "aria-labelledby": "${5:modelTitleId}", id: "${2:modelId}", role: "dialog", tabindex: "-1"}
  .modal-dialog{class: "modal-${3:sm|lg}", role: "document"}
    .modal-content
      .modal-header
        %h5.modal-title ${3:Modal title}
        %button.close{"aria-label": "Close", "data-dismiss": "modal", type: "button"}
          %span{"aria-hidden": "true"} Ã—
      .modal-body
        ${8:Body}
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss": "modal", type: "button"} ${6:Close}
        %button.btn.btn-primary{type: "button"} ${7:Save}
